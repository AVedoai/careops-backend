# Environment Variables for Railway Deployment
# Copy these to Railway's Environment Variables section

# Database (Railway will provide these when you add PostgreSQL plugin)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Railway will provide this when you add Redis plugin) 
REDIS_URL=redis://user:password@host:port

# Security (generate new secret for production)
SECRET_KEY=your-new-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS (update with your actual domains)
CORS_ORIGINS=["https://your-frontend.vercel.app","https://your-custom-domain.com"]

# URLs (update with Railway and frontend URLs)
FRONTEND_URL=https://your-frontend.vercel.app
BACKEND_URL=https://your-backend.up.railway.app

# SendGrid (your existing keys)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-email@domain.com

# Twilio (your existing keys)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone

# Google Calendar (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Environment
ENVIRONMENT=production
DEBUG=False

# Supabase (your existing keys)
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_KEY=your-supabase-service-key
FILE_STORAGE_BUCKET=forms
FILE_STORAGE_URL=your-supabase-storage-url

# Logging
LOG_LEVEL=INFO